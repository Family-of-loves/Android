<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/t_enemy"
        android:layout_alignTop="@+id/viewUserInfoOverlay"
        android:layout_marginLeft="20dp"
         />

    <ImageView
        android:id="@+id/viewUserInfoOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_user"
        android:layout_marginRight="46dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:src="@drawable/btn_rock"/>

    <TextView
        android:id="@+id/t_enemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewUserInfoOverlay"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="상대방의 무기"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/t_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="31dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/t_enemy"
        android:text="나의 무기"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
