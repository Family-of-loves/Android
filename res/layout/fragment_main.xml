<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

            android:background="@drawable/main"
    tools:context="com.example.wearetherunningman.MainActivity$PlaceholderFragment" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/content_wrap"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <EditText
                android:id="@+id/put_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:ems="13"
                android:hint="방 이름을 입력하세요."
                android:text="test"
                android:textColor="#FFF"
                android:textColorHint="#EEE" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />

            <ImageButton
                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/how"
                android:layout_below="@+id/put_num"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/main_btn" />

            <TextView
                android:id="@+id/txt_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/enter"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="참가하기"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/put_num"
                android:layout_alignParentTop="true"
                android:text="We Are The"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFF" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sub_title"
                android:layout_centerHorizontal="true"
                android:text="Running Man"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/main_btn" />

            <TextView
                android:id="@+id/txt_how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_enter"
                android:layout_alignTop="@+id/how"
                android:layout_marginTop="14dp"
                android:text="사용방법"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF" />

            <ImageButton
                android:id="@+id/web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/how"
                android:layout_below="@+id/how"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/main_btn" />

            <TextView
                android:id="@+id/txt_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/web"
                android:layout_alignLeft="@+id/txt_how"
                android:layout_marginBottom="14dp"
                android:text="방만들기"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF" />

            
        </RelativeLayout>
    </ScrollView>

</LinearLayout>